                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guidelines for Dog Educational Games Programs"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Ensure your dog has plenty of water during play."
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Take breaks to avoid exhaustion."
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Use toys that are safe and designed for dogs."
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

